#define NSLog TFLog
#define NEW_CALENDAR_FUNCTIONALITY_DEVELOPEMENT

#define THROW_IF_ARGUMENT_NIL(argument)\
    if (argument == nil) {\
        NSString *reason = [NSString stringWithFormat:@"[%@ %@] -> argument: "#argument" is not specified.",\
                NSStringFromClass(self.class), NSStringFromSelector(_cmd)];\
        @throw [NSException exceptionWithName: NSInvalidArgumentException reason:reason userInfo: nil];\
    }

#define THROW_UNIMPLEMENTED_EXCEPTION\
    @throw [NSException exceptionWithName:NSInternalInconsistencyException\
            reason:[NSString stringWithFormat:@"%@ should be implemented in subclasses", NSStringFromSelector(_cmd)]\
            userInfo:nil];
