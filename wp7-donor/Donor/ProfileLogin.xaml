<phone:PhoneApplicationPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:toolkitPrimitives="clr-namespace:Microsoft.Phone.Controls.Primitives;assembly=Microsoft.Phone.Controls.Toolkit" xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit" 
    xmlns:WPExtensions="clr-namespace:WPExtensions;assembly=WPExtensions"
    x:Class="Donor.ProfileLogin" 
    mc:Ignorable="d" d:DesignWidth="480" d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    shell:SystemTray.IsVisible="True">
	
    
    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="images/bg_04.png"/>
        </Grid.Background>
        <!--Pivot Control-->
        <controls:Pivot Loaded="Pivot_Loaded">

            <controls:Pivot.Title>
                <StackPanel>
                <toolkit:PerformanceProgressBar HorizontalAlignment="Left" 
				Height="8" Margin="0" VerticalAlignment="Top"
				 IsIndeterminate="False" Width="460" Name="LoadingBar" />
                    <TextBlock 
					Style="{StaticResource Text24pxWhite}" 
					Text="профиль"/>   
                </StackPanel>
            </controls:Pivot.Title>
            <!--Pivot item one-->
            <controls:PivotItem Margin="12,35,12,0">
                <controls:PivotItem.Header>
                    <TextBlock Style="{StaticResource Text70pxWhite}" 
					Text="аккаунт" Margin="0,30,0,0"/>
                </controls:PivotItem.Header>
                <Grid>
                    <StackPanel Name="EditProfile" Visibility="Collapsed">
                    <TextBlock Text="Имя"
					Style="{StaticResource Text24pxCBB2A3}"/>
                    <TextBox Name="EditName" 
					Style="{StaticResource TextBoxStyle1}"	
					Text="{Binding Path=App.ViewModel.User.Name, 
					Mode=TwoWay}" />
                        <TextBlock Text="Пол" 
						Style="{StaticResource Text24pxCBB2A3}"/>
                        <StackPanel Orientation="Horizontal" 
						Name="SexEditGroup">
                            <RadioButton 
							Content="Мужской" Name="EditMale" 
							Foreground="#FFCBB2A3" />
                            <RadioButton Content="Женский"
							
							Name="EditFemale" DataContext="{Binding}" 
							Foreground="#FFCBB2A3" />
                        </StackPanel>

                        <TextBlock Text="Группа крови"
						Style="{StaticResource Text24pxCBB2A3}" />
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                        <toolkit:WrapPanel ItemHeight="90" ItemWidth="210" Name="BloudTypeGroupEdit" VerticalAlignment="Top" HorizontalAlignment="Left" Height="160">
                            <RadioButton Content="O(I)" 
							Foreground="#FFCBB2A3"
							Name="o" Height="75" VerticalAlignment="Top" />
                            <RadioButton 
							Foreground="#FFCBB2A3"
							Content="A(II)" Name="a" Height="75" VerticalAlignment="Top" />            
                        
                            <RadioButton 
							Content="B(III)" 
							Foreground="#FFCBB2A3"
							Name="b" Height="75" VerticalAlignment="Top" />
                            <RadioButton 
							Foreground="#FFCBB2A3"
							Content="AB(IV)" Name="ab" Height="75" VerticalAlignment="Top" />
                        </toolkit:WrapPanel>
                        </StackPanel>

                        <TextBlock Text="Резус-фактор" 
						Style="{StaticResource Text24pxCBB2A3}"/>
                        <StackPanel Orientation="Horizontal" Name="RHedit">
                            <RadioButton Content="RH+" 
							Foreground="#FFCBB2A3"
							Name="EditRHpl" />
                            <RadioButton Content="RH-" 
							Foreground="#FFCBB2A3"
							Name="EditRHd" DataContext="{Binding}" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Margin="0,10" Name="UserProfile" Visibility="Collapsed">
                        <StackPanel>
                            <TextBlock
							Style="{StaticResource Text36pxCBB2A3}"
							Text="Имя" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding User.Name}" 
							Name="ProfileName" TextWrapping="Wrap" 
							Margin="12,-6,12,0" 
							Style="{StaticResource Text24pxDF8D4B}"
							/>
                        </StackPanel>
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Пол" TextWrapping="Wrap" 
							Style="{StaticResource Text36pxCBB2A3}"/>
                            <TextBlock Name="ProfileSex" 
							Text="{Binding User.Sex}"  
							TextWrapping="Wrap" Margin="12,-6,12,0" 
							Style="{StaticResource Text24pxDF8D4B}"/>
                        </StackPanel>
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Группа крови" 
							TextWrapping="Wrap" 
							Style="{StaticResource Text36pxCBB2A3}"/>
                            <TextBlock Text="{Binding User.OutBloodDataString}" 
							Name="ProfileBloodGroup" TextWrapping="Wrap" 
							Margin="12,-6,12,0" 
							Style="{StaticResource Text24pxDF8D4B}"/>
                        </StackPanel>
                        <StackPanel Margin="0,10">
                            <TextBlock Text="Записано кроводач" TextWrapping="Wrap" Style="{StaticResource Text36pxCBB2A3}"/>
                            <TextBlock Text="{Binding User.GivedBlood}" TextWrapping="Wrap" Margin="12,-6,12,0" Style="{StaticResource Text24pxDF8D4B}"/>
                        </StackPanel>

                        <StackPanel Margin="0,10">
                            <TextBlock Text="Следующая Кроводача" TextWrapping="Wrap" Style="{StaticResource Text36pxCBB2A3}"/>
                            <TextBlock Text="{Binding User.NearestBloodGive}" TextWrapping="Wrap" Margin="12,-6,12,0" Style="{StaticResource Text24pxDF8D4B}"/>
                        </StackPanel>

                        
                    </StackPanel>
                    <StackPanel Name="RegisterForm" Visibility="Collapsed">
                    	<ScrollViewer>
                    		<StackPanel>
                        <TextBlock 
						Style="{StaticResource Text24pxCBB2A3}"
						Text="E-mail" />
                        <TextBox x:Name="email1" Style="{StaticResource TextBoxStyle1}" Text="" />
                        <TextBlock
						Style="{StaticResource Text24pxCBB2A3}"
						Text="Пароль" />
                        <PasswordBox 
						x:Name="password1" Password="" Style="{StaticResource PasswordBoxStyle1}"/>
                        <TextBlock 
						Style="{StaticResource Text24pxCBB2A3}"
						Text="Подтвердите пароль" />
                        <PasswordBox  Style="{StaticResource PasswordBoxStyle1}"	
						x:Name="password2" Password="" />
                        <TextBlock 
						Style="{StaticResource Text24pxCBB2A3}"
						Text="Имя" />
                        <TextBox x:Name="name1" Text="" 
						Style="{StaticResource TextBoxStyle1}"/>

                                <StackPanel Orientation="Horizontal" 
						Name="SexEditGroupCreate">
                                    <RadioButton 
							Content="Мужской" Name="CreateMale" 
							Foreground="#FFCBB2A3" />
                                    <RadioButton Content="Женский"
							
							Name="CreateFemale" DataContext="{Binding}" 
							Foreground="#FFCBB2A3" />
</StackPanel>

                                <Button Name="RegisterButton" 
						FontSize="24"
						Background="#FF4186A3" 
						BorderBrush="#FF4186A3" 
						FontFamily="Segoe WP Regular"
						Content="Регистрация" Click="RegisterButton_Click" Foreground="White" />
						</StackPanel>
						</ScrollViewer>
                    </StackPanel>
                    <StackPanel Name="LoginForm">
                        <TextBlock Text="Введите e-mail" 
						Style="{StaticResource Text24pxCBB2A3}"/>
                        <TextBox Background="#FF4F3B34" Style="{StaticResource TextBoxStyle1}"
BorderBrush="#FF4F3B34" Foreground="#FFCBB2A3" x:Name="email" 
						Text="" />
                        <TextBlock Text="Введите пароль"
						Style="{StaticResource Text24pxCBB2A3}" />
                        <PasswordBox Background="#FF4F3B34" 
Style="{StaticResource PasswordBoxStyle1}" BorderBrush="#FF4F3B34" 	Foreground="#FFCBB2A3" x:Name="password" Password="" />
                        <Button Name="Login" 
						Content="Вход" 
						Click="Login_Click"
						FontSize="24"
						Background="#FF4186A3" 
						BorderBrush="#FF4186A3" 
						FontFamily="Segoe WP Regular" Foreground="White" />
                        <TextBlock 
						Foreground="#FF847168"
						Style="{StaticResource Text24pxCBB2A3}"
						Text="Если у вас нет аккаунта, введите пароль и e-mail для начала регистрации." TextWrapping="Wrap" />

                        <Button Name="RestorePassword" 
						Content="Восстановить пароль" 
						Click="RestorePassword_Click" 
						FontSize="24"
						Background="#FF4186A3" 
						BorderBrush="#FF4186A3" 
						FontFamily="Segoe WP Regular" Foreground="#FFFFFFFF"/>
                    </StackPanel>
                    
					<WPExtensions:AdvancedApplicationBar Background="#FF211E1D" BackgroundColor="#FF211E1D" Foreground="White" BorderBrush="#FF211E1D" ForegroundColor="White" OpacityMask="White" Name="AppBar" IsVisible="False" IsMenuEnabled="False" >
                        <WPExtensions:AdvancedApplicationBarIconButton 
						IconUri="/icons/appbar.edit.rest.png" 
						Name="EditButton" Text="Редактировать" 
						
						Visibility="Visible" 
						Click="AdvancedApplicationBarIconButton_Click" />
                        <WPExtensions:AdvancedApplicationBarIconButton 
						IconUri="/icons/ic_ApplicationBar_exit.png" 
						Text="Выход" Visibility="Visible" 
						Name="DeleteUserButton" Click="DeleteUserButton_Click" />
                        
<WPExtensions:AdvancedApplicationBarIconButton 
IconUri="/icons/ic_ApplicationBar_done.png" Text="Сохранить" 
Visibility="Collapsed" Name="SaveEditProfileButton" Click="SaveEditProfileButton_Click" />
                        <WPExtensions:AdvancedApplicationBarIconButton 
						IconUri="/icons/ic_ApplicationBar_close.png" Text="Отмена" 
						Visibility="Collapsed" Name="CancelEditProfileButton" 
						Click="CancelEditProfileButton_Click" />                        
                    </WPExtensions:AdvancedApplicationBar>          
                    
                    
                </Grid>
            </controls:PivotItem>

            <!--Pivot item two-->
            <!--<controls:PivotItem Margin="12,35,12,0" Visibility="Collapsed">
