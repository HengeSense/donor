<UserControl x:Class="Donor.Controls.AllBadgeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:msp="clr-namespace:MSPToolkit.Controls;assembly=MSPToolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    DataContext="{Binding Main.Stations.CurrentStation, Source={StaticResource Locator}}" 
    d:DesignHeight="480" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <TextBlock 
                Text="{Binding CurrentBadge.Title}" 
                DataContext="{Binding Badges, Source={StaticResource Locator}}" 
                HorizontalAlignment="Center" 
                Style="{StaticResource PhoneTextTitle2Style}" />
            <Image Width="160" Margin="20" 
                Source="{Binding CurrentBadge.Image}" 
                DataContext="{Binding Badges, Source={StaticResource Locator}}"/>
            <TextBlock 
                Text="{Binding CurrentBadge.Description}" 
                DataContext="{Binding Badges, Source={StaticResource Locator}}" 
                Margin="20"/>
            
        </StackPanel>
    </Grid>
</UserControl>
