        <ScrollViewer x:Name="scrollViewer" Style="{StaticResource HorizontalScrollViewerStyle}" 
                      Margin="0,20,0,0"
            AutomationProperties.AutomationId="ItemsFlipView"
            AutomationProperties.Name="Item Details"
            TabIndex="1"
                      Grid.Row="1"
            Grid.RowSpan="2">

            <!-- Содержимое может занимать столько столбцов, сколько потребуется -->
            <common:RichTextColumns x:Name="richTextColumns" Margin="117,0,117,47" VerticalAlignment="Top">
                <RichTextBlock x:Name="richTextBlock" Width="560" Style="{StaticResource ItemRichTextStyle}" IsTextSelectionEnabled="False" VerticalAlignment="Top">
                    <Paragraph>
                        <Run FontSize="26.667" FontWeight="SemiBold" 
                                            Foreground="#DF8D4B" 
                                             Text="Перед кроводачей"/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• Не приходите сдавать кровь, если вы чувствуете недомогание (озноб, головокружение, головную боль, слабость)."/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• Не курите за час до донации."/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• Не принимайте алкоголь за 48 часов до донации."/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• Обязательно выспитесь и съешьте легкий завтрак (сладкий чай, сухое печенье, каша на воде)."/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• Старайтесь ограничить прием жирной и жареной пищи накануне сдачи крови."/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• За три дня до донации откажитесь от приема анальгетиков и аспирина, а также содержащих их лекарств (эти вещества ухудшают свертываемость крови)."/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• Во время осмотра врачом перед донацией откровенно отвечайте на его вопросы и не скрывайте информацию о принятых лекарствах и перенесенных заболеваниях."/>
                    </Paragraph>

                    
                    <Paragraph>
                        <LineBreak/>
                        <LineBreak/>
                        <LineBreak/>
                        <Run FontSize="26.667" FontWeight="SemiBold" 
                                            Foreground="#DF8D4B" 
                                             Text="Вы можете сдать кровь, если:"/>
                        <LineBreak/>
                        <LineBreak/>                        
                        <Run FontWeight="SemiLight" 
                                             Text="• вы не употребляли алкоголь за последние 48 часов;"/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• вы не принимали анальгетики за последние 72 часа;"/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• для женщин: после окончания менструации прошло 5 дней;"/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• вам не удаляли зуб за последние 10 дней;"/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• вы не принимали антибиотики за последние 2 недели;"/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• вы не болели ангиной, гриппом, ОРВИ за последний месяц;"/>
                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text="• у вас не было обострения аллергии за последние 2 месяца."/>
                        
                        

                        <LineBreak/>
                        <Run FontWeight="SemiLight" 
                                             Text=""/>
                    </Paragraph>


                </RichTextBlock>

                <!-- На основании этого шаблона создаются дополнительные столбцы -->
                <common:RichTextColumns.ColumnTemplate>
                    <DataTemplate>
                        <RichTextBlockOverflow Width="560" Margin="80,0,0,0">
                            <RichTextBlockOverflow.RenderTransform>
                                <TranslateTransform X="-1" Y="4"/>
                            </RichTextBlockOverflow.RenderTransform>
                        </RichTextBlockOverflow>
                    </DataTemplate>
                </common:RichTextColumns.ColumnTemplate>
            </common:RichTextColumns>
        </ScrollViewer>

        <!-- Кнопка "Назад" и заголовок страницы -->
        <Grid Background="#7F0000">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' x:Name="backButton"                IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
            <TextBlock x:Name="pageTitle" Text="Перед кроводачей" Style="{StaticResource PageHeaderTextStyle}" Grid.Column="1" IsHitTestVisible="false"/>
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- Состояния отображения соответствуют состояниям представления приложения -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- Для кнопки "Назад" в книжном представлении учитывается принятое соглашение о более узких полях (100 пикселей) -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- В прикрепленном представлении кнопка "Назад" и заголовок имеют различные стили -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>

